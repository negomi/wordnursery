<% if @word.errors.any? %>
	<h1 class="title">Oops.</h1>
    <% @word.errors.messages.each do |msg| %>
      <p><%= msg[1][0] %></p>
    <% end %>
<% else %>
	<section class="results">
		<div class="results-header">

			<!-- FIXME Use form_for -->
			<%# form_for Word.new, html: { class: "hidden" } do |f| -%>
				<%# f.hidden_field :name, value: "name" %>
				<%# f.hidden_field :pronunciation, value: "pronunciation" %>
				<%# f.hidden_field :definitions, value: "definition" %>
				<%# f.hidden_field :attribution, value: "attribution" %>
				<%# f.submit name: "store", class: "button button-blue", value: "Add to Nursery" %>
			<%# end -%>

			<form class="hidden" action="/words" method="post">
				<input type="hidden" value="<%= @word.name %>" name="word">
				<input type="hidden" value="<%= @word.definition %>" name="definitions">
				<input type="hidden" value="<%= @word.attribution %>" name="attribution">
				<input class="button button-blue" name="store" type="submit" value="Add to Nursery">
			</form>
 			<%= link_to "New search", root_path, class: "button button-white" %>
			<form class="hidden" action="/search" method="get">
				<input class="button button-white" name="searchtype" type="submit" value="Randomize!">
			</form>
			<h1 class="title"><%= @word.name %></h1>
		</div>
		<h2><%= @word.pronunciation %></h2>
		<section class="definitions">
			<% if @error %>
			<p><%= @error %></p>
			<% else %>
				<% @word.definition.each do |result| %>
					<h3><%= result[:part_of_speech] %></h3>
					<p><%= result[:definition] %></p>
				<% end %>
				<p class="smallprint"><%= @word.attribution %></p>
			<% end %>
		</section>
	</section>
<% end %>
