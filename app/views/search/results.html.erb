<% if @blank_error %>
	<p><%= @blank_error %></p>
<% else %>
	<h1><%= @word %></h1>
	<h2><%= @pronunciation %></h2>
	<% if @not_found_error %>
		<p><%= @not_found_error %></p>
	<% else %>
		<% @definitions.each do |result| %>
			<h3><%= result[:part_of_speech] %></h3>
			<p><%= result[:definition] %></p>
		<% end %>
		<p><%= @attribution %></p>
	<% end %>
<% end %>


